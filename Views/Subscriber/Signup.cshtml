@{
    ViewBag.Title = "Signup";
}

<div class="page-header">
    <h1>Subscriber <small>signup</small></h1>
</div>

@if (ViewBag.errorMsg != null)
{
    <div class="alert alert-danger" role="alert">@ViewBag.errorMsg</div>
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label for="subscriptionid" class="col-sm-2 control-label">Subscription ID</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="subscriptionid" name="subscriptionid" value="1" placeholder="subscriptionid">
        </div>
    </div>
    
    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="email" name="email" value="mymail@mail.com" placeholder="email">
        </div>
    </div>

    <div class="form-group">
        <label for="currency" class="col-sm-2 control-label">Recurring Plan</label>
        <div class="col-sm-10">
            @Html.DropDownList("recurringPlanId", null, new { @class = "form-control" })
        </div>
    </div>
    
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Signup</button>
        </div>
    </div>
}

