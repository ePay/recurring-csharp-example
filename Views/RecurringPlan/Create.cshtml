@model RecurringServiceExample.RecurringService.recurringplan

@{
    ViewBag.Title = "Create";
}

<div class="page-header">
    <h1>Recurring plan <small>create</small></h1>
</div>

@if (ViewBag.errorMsg != null)
{
    <div class="alert alert-danger" role="alert">@ViewBag.errorMsg</div>
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.Hidden("addfee", "false")

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="addfee" value="true"> add fee
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="description" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="description" value="My description" name="description" placeholder="Description">
        </div>
    </div>
    <div class="form-group">
        <label for="recurringperiod" class="col-sm-2 control-label">Recurring Period</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="recurringperiod" value="7" name="recurringperiod" placeholder="Recurring Period">
        </div>
    </div>
    <div class="form-group">
        <label for="recurringperiodprice" class="col-sm-2 control-label">Recurring period price</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="recurringperiodprice" value="100" name="recurringperiodprice" placeholder="Recurring period price">
        </div>
    </div>
    <div class="form-group">
        <label for="currency" class="col-sm-2 control-label">Currency</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="currency" name="currency" value="208" placeholder="Currency">
        </div>
    </div>
    <div class="form-group">
        <label for="currency" class="col-sm-2 control-label">Recurring period</label>
        <div class="col-sm-10">
            <select class="form-control" name="recurringperiodtypeid">
                <option value="4">Day</option>
                <option value="5">Week</option>
                <option value="6">Month</option>
                <option value="7">Year</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create plan</button>
        </div>
    </div>
}